<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TrasfusionaleApp"
             x:Class="TrasfusionaleApp.MainPage">

    <StackLayout Orientation="Vertical" Margin="10" >

        <Grid 
                  VerticalOptions="CenterAndExpand" 
                  HorizontalOptions="CenterAndExpand"
                  BackgroundColor="Black" 
                  Padding="2" 
                  RowSpacing="1"
                  ColumnSpacing="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout Grid.Column="0"
                                 Grid.Row="0" 
                                 BackgroundColor="White">
                    <Image Source="locIcon.png"  
                               HeightRequest="100">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="IndividuaIlPaziente"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label
                            Text="Localizza paziente"
                            HorizontalTextAlignment="Center"
                            FontSize="Medium"
                            WidthRequest="250" />
                </StackLayout>

            </Grid>

            <Grid Grid.Column="0" Grid.Row="1" HorizontalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout  Grid.Column="0" Grid.Row="0" BackgroundColor="White">
                    <Image Source="provettaIcona.png" HeightRequest="100" >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="vaiPaginaPretrasfusionale"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label
                            Text="Pre-trasfusionale"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"
                            WidthRequest="250" />
                </StackLayout>
            </Grid>
            <Grid  Grid.Row="2" HorizontalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout BackgroundColor="White" 
                                 Grid.Column="0" 
                                 Grid.Row="0" >
                    <Image Source="bloodIcon.png" 
                               HeightRequest="100">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="VaiInPaginaTrasfusionale"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label
                            Text="Trasfusionale"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"
                            WidthRequest="250" />
                </StackLayout>

            </Grid>
    
        </Grid>
    </StackLayout>

</ContentPage>

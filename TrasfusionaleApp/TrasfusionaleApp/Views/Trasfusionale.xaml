<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrasfusionaleApp.Views.Trasfusionale"
             NavigationPage.HasBackButton="False">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Name="AnnullaOperazione"
            Order="Primary"
            Text="Annulla"
            Clicked="toolbarAnnulla"
            Priority="0"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        
        <StackLayout>
            <Entry x:Name="entryPressioneArteriosa" Placeholder="Inserire Pressione Arteriosa"></Entry>
            <Entry x:Name="entryTemperatura" Placeholder="Inserire Temperatura corporea"></Entry>
            <Entry x:Name="entryFrequenzaCardiaca" Placeholder="Inserire Frequenza cardiaca"></Entry>
            <Button
                Text="Inizia trasfusione"
                x:Name="btnInizia"
                Clicked="inizia" />
            <Button
                Text="Fine trasfusione"
                x:Name="btnFine"
                Clicked="fine" />
            <Image x:Name="goccia" Source="goccia.png" HeightRequest="60"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>